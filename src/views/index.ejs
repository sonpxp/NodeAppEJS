<%- include('layout/header') %>

    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                <!-- // todo  message error and alert-->
                <% if (message) { %>
                    <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                        <strong>
                            <%= message.message %>
                        </strong>
                    </div>
                    <% } %>
                        <div class="table-responsive">
                            <!-- // responsive -->
                            <% if (users !='' ) { %>
                                <table class="table table-striped">

                                    <thead>
                                        <tr style="background-color: #ffdb93;">
                                            <th>ID</th>
                                            <th>Image</th>
                                            <th>Name</th>
                                            <th>E-mail</th>
                                            <th>Phone</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <% users.forEach((row, index)=> { %>
                                            <tr style="background-color: #ffffff;">
                                                <td>
                                                    <%= index %>
                                                </td>
                                                <td><img src="<%= row.image %>" width="60" height="60"class="rounded-circle"></td>
                                                <td>
                                                    <%= row.name %>
                                                </td>
                                                <td>
                                                    <%= row.email %>
                                                </td>
                                                <td>
                                                    <%= row.phone %>
                                                </td>
                                                <td>
                                                    <a href="/edit/<%= row._id %> " class="text-success"><i
                                                            class="fas fa-edit fa-lg mx-1"></i></a>
                                                    <a href="/delete/<%= row._id %>" class="text-success"><i
                                                            class="fas fa-trash fa-lg mx-1"></i></a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>

                                </table>

                                <% } else { %>
                                    <h1 class="text-center text-secondary mt-5">No users found in the database</h1>
                                    <% } %>

                        </div>
            </div>
        </div>

    </div>

    <%- include('layout/footer') %>